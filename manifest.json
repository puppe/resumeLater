{
    "manifest_version": 2,
    "name": "resumelater",
    "version": "2.0.0",
    "description": "Bookmark Youtube videos, saving the current position. Resume playback later.",
    "author": "Martin Puppe",
    "homepage_url": "https://github.com/puppe/resumeLater",
    "icons": {
        "48": "icons/resumelater-48.png",
        "64": "icons/resumelater-64.png",
        "96": "icons/resumelater-96.png"
    },
    "permissions": [
        "*://*.youtube.com/*",
        "notifications",
        "storage",
        "tabs"
    ],
    "applications": {
        "gecko": {
            "id": "resumeLater@mpuppe.de",
            "strict_min_version": "48.0"
        }
    },
    "background": {
        "scripts": [
            "videos.js",
            "youtube.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_title": "Open list of videos",
        "default_icon": {
            "16": "icons/resumelater-16.png",
            "32": "icons/resumelater-32.png",
            "48": "icons/resumelater-48.png",
            "64": "icons/resumelater-64.png",
            "96": "icons/resumelater-96.png"
        }
    },
    "page_action": {
        "default_title": "Pause video and save it for later",
        "default_icon": {
            "19": "icons/resumelater-19.png",
            "38": "icons/resumelater-38.png"
        }
    }
}
