{
    "name": "resumelater",
    "version": "1.1.0",
    "manifest_version": 2,
    "permissions": ["storage", "notifications"],
    "applications": {
        "gecko": {
            "id": "resumeLater@mpuppe.de"
        }
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*.mozilla.org/*"],
            "js": ["content-script.js"]
        }
    ],
    "browser_action": {
        "browser_style": true,
        "default_icon": "icons/icon32.png",
        "default_title": "button label",
        "default_popup": "popup.html"
    }
}
